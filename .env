# select a revision to deploy, available values: stable, beta, canary
AFFINE_REVISION=local

# set the port for the server container it will expose the server on
PORT=3010

# set the host for the server for outgoing links
# AFFINE_SERVER_HTTPS=true
# AFFINE_SERVER_HOST=affine.yourdomain.com
# or 
AFFINE_SERVER_EXTERNAL_URL=http://localhost:3010

# position of the database data to persist
DB_DATA_LOCATION=~/.affine/self-host/postgres/pgdata
# position of the upload data(images, files, etc.) to persist
UPLOAD_LOCATION=~/.affine/self-host/storage
# position of the configuration files to persist
CONFIG_LOCATION=~/.affine/self-host/config

# database credentials
DB_USERNAME=affine
DB_PASSWORD=AffinePass123!
DB_DATABASE=affine

# SMTP (MailHog for local testing)
MAILER_HOST=mailhog
MAILER_PORT=1025
MAILER_SENDER="noreply@localhost"
MAILER_USER=noreply@localhost
MAILER_PASSWORD=affine
MAILER_SECURE=false
